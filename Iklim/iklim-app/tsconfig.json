{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "checkJs": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strict": true,
    "types": [
      "node"
    ],
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}